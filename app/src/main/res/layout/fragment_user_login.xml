<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login_restorant"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_login_res_color" />

    <TextView
        android:id="@+id/fragment_user_login_txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="50dp" />

    <RelativeLayout
        android:id="@+id/fragment_user_login_relative_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_user_login_txt_login"
        android:layout_margin="25dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_email_white" />

        <EditText
            android:id="@+id/fragment_user_login_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="@string/email"
            android:textColorHint="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/fragment_user_login_et_email"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_user_login_relative_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_user_login_relative_email"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_lock_white" />

        <EditText
            android:id="@+id/fragment_user_login_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/fragment_user_login_et_password"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white" />

    </RelativeLayout>

    <TextView
        android:id="@+id/fragment_user_login_txt_forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/fragment_user_login_relative_password"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:text="@string/are_you_forget_your_password"
        android:textColor="@color/white"
        android:layout_marginEnd="10dp"/>

    <CheckBox
        android:id="@+id/ck_remember_login_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_user_login_relative_password"
        android:layout_margin="5dp"
        android:text="Remember me"
        android:textColor="#ffff"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/fragment_user_login_btn_login"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/fragment_user_login_relative_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_grident"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="20sp" />


        <TextView
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray"
            android:paddingStart="30dp"
            android:text="@string/are_you_have_not_account"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fragment_user_login_relative_sign_up"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@color/gray"
            android:paddingStart="5dp"
            android:text="@string/click_here"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />



</RelativeLayout>
