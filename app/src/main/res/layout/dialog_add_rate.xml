<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray">


        <TextView
            android:id="@+id/dialo_add_txt_rate_love"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:text="@string/add_your_rate"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/dialo_add_linear_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialo_add_txt_rate_love"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
           >


            <ImageView
                android:id="@+id/dialo_add_img_rate_love"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/ic_face_love"
                android:layout_marginStart="10dp"
                />

            <ImageView
                android:id="@+id/dialo_add_img_rate_happy"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/dialo_add_img_rate_love"
                android:background="@drawable/ic_face_happy" />

            <ImageView
                android:id="@+id/dialo_add_img_rate_ordinary"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/dialo_add_img_rate_happy"
                android:background="@drawable/ic_face_normal" />

            <ImageView
                android:id="@+id/dialo_add_img_rate_sad"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/dialo_add_img_rate_ordinary"
                android:background="@drawable/ic_face_sad" />

            <ImageView
                android:id="@+id/dialo_add_img_rate_angry"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/dialo_add_img_rate_sad"
                android:background="@drawable/ic_face_angry"
                android:layout_marginEnd="10dp"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/dialog_add_et"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_below="@id/dialo_add_linear_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/square_white"
            android:gravity="start"
            android:hint="@string/add_your_rate"
            android:paddingStart="10dp"
            android:textSize="25sp" />

        <Button
            android:id="@+id/dialog_add_comment_btn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_grident"
            android:text="ok"
            android:textSize="30sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>