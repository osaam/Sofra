<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/fragment_splash_choose_img_plant1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-60dp"
        android:layout_marginTop="-50dp"
        android:background="@drawable/plant1" />

    <ImageView
        android:id="@+id/fragment_splash_choose_img_logo"
        android:layout_width="300dp"
        android:layout_height="220dp"
        android:layout_below="@+id/fragment_splash_choose_img_plant1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo" />

    <Button
        android:id="@+id/fragment_splash_choose_btn_order"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/fragment_splash_choose_img_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/sofra_color"
        android:text="@string/order_food"
        android:textColor="@color/white"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/fragment_splash_choose_btn_sell"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/fragment_splash_choose_btn_order"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/sofra_color"
        android:text="@string/buy_food"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/fragment_splash_choose_img_plant2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-120dp"
        android:layout_marginBottom="-100dp"
        android:background="@drawable/plant2"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>