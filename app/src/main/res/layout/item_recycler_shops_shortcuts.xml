<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_recycler_shops_item_relative_shortcuts"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_recycler_shops_item_img_shortcuts"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle" />

    <TextView
        android:id="@+id/item_recycler_shops_item_txt_shortcuts"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/item_recycler_shops_item_img_shortcuts"
        android:layout_centerHorizontal="true"
        android:textSize="10sp" />


</RelativeLayout>