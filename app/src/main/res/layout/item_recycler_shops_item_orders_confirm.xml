<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="10dp"
    android:layout_marginTop="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_recycler_shops_item_order_confirm_card_img"
        android:layout_width="100dp"
        android:layout_height="125dp"
        android:scaleType="fitXY">

        <ImageView
            android:id="@+id/item_recycler_shops_item_order_confirm_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/item_recycler_shops_item_order_confirm_linear1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_toEndOf="@+id/item_recycler_shops_item_order_confirm_card_img"
        >

        <TextView
            android:id="@+id/item_recycler_shops_item_order_confirm_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/item_recycler_shops_item_order_confirm_price"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/gray"
            android:layout_toLeftOf="@+id/item_recycler_shops_item_order_confirm_title"
            android:textSize="15dp" />

        <Button
            android:id="@+id/delete"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_clear_white"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/red" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/item_recycler_shops_item_order_confirm_linear2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/item_recycler_shops_item_order_confirm_linear1"
        android:layout_toEndOf="@id/item_recycler_shops_item_order_confirm_card_img"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="@string/mount"
            android:textSize="20dp" />

        <Button
            android:id="@+id/increase"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/circle"
            android:text="+"
            android:textSize="20dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/item_recycler_shops_item_order_confirm_txt_num"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:layout_gravity="center"

            />

        <Button
            android:id="@+id/decrease"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/circle"
            android:text="-"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            />


    </LinearLayout>


</RelativeLayout>