<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/white"
    >


    <ImageView
        android:id="@+id/fragment_user_my_account_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_account_gray"
        />

    <RelativeLayout
        android:id="@+id/fragment_regester_restorant_relative_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_below="@+id/fragment_user_my_account_img"
        android:background="@drawable/circle_gray"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_account_white"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/fragment_user_my_account_txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:layout_marginStart="40dp"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            />



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fragment_regester_restorant_relative_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_regester_restorant_relative_name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/circle_gray"

        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_email_white"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/fragment_user_my_account_txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:layout_marginStart="40dp"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fragment_regester_restorant_relative_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_regester_restorant_relative_email"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/circle_gray"

        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_phone_white"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/fragment_user_my_account_txt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone"
            android:layout_marginStart="40dp"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fragment_regester_restorant_relative_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_regester_restorant_relative_phone"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/circle_gray"

        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_home_white"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/fragment_user_my_account_et_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/city"
            android:layout_marginStart="40dp"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            />
        <Spinner
            android:id="@+id/fragment_user_my_account_sp_city"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_down_white"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fragment_regester_restorant_relative_regon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_regester_restorant_relative_city"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/circle_gray"

        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_home_white"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/fragment_user_my_account_te_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/area"
            android:layout_marginStart="40dp"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            />
        <Spinner
            android:id="@+id/fragment_user_my_account_sp_area"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_down_white"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>



    <Button
        android:id="@+id/fragment_splash_choose_btn_confirm"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/fragment_regester_restorant_relative_regon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_grident"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="20sp"/>


</RelativeLayout>
