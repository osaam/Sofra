<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRevealLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:dragEdge="right"
    app:mode="normal">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/btn_del"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_delete_sofra" />

        <ImageView
            android:id="@+id/btn_edt"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"

            android:background="@drawable/ic_edit_green" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/item_relatev_recycler_type_food"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_margin="20dp"
        android:background="@color/gray2">

        <ImageView
            android:id="@+id/item_recycler_comment_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/item_recycler_type_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/item_recycler_comment_img"
            android:paddingStart="10dp"
            android:textSize="20sp" />
    </RelativeLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>