<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_recycler_restorant_food_type"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:dragEdge="right"
    app:mode="normal">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/restourant_offer_btn_del"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_delete_sofra" />

        <ImageView
            android:id="@+id/restourant_offer_btn_edt"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/ic_edit_green" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_recycler_restourant_offer_relateve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="15dp">


        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="130dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/circle_gray"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/item_recycler_restourant_offers_txt_offers"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"

                />




        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_recycler_restourant_offer_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/circle"

            />

    </RelativeLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>