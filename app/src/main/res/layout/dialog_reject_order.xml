<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/gray"
    android:layout_margin="10dp">

    <TextView
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/dialo_reject_txt"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:text="@string/reason_of_reject"
        android:textSize="30sp"
        android:textColor="@color/black"
        />



    <EditText
        android:id="@+id/dialog_reject_et"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialo_reject_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/square_white"
        android:paddingStart="10dp"
        android:gravity="start"
        android:textSize="25sp" />

    <Button
        android:id="@+id/dialog_reject_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_grident"
        android:text="ok"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_below="@id/dialog_reject_et"
        android:textSize="30sp"
        android:layout_marginBottom="@dimen/_20sdp"/>

</RelativeLayout>