<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp">

    <TextView
        android:id="@+id/dialo_add_txt_update"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:text="@string/update_your_food_type"
        android:textSize="30sp"
        android:textColor="@color/sofra_color"
        />
   <de.hdodenhof.circleimageview.CircleImageView
       android:id="@+id/dialo_update_img"
       android:layout_width="100dp"
       android:layout_marginTop="10dp"
       android:layout_height="100dp"
       android:layout_below="@id/dialo_add_txt_update"
       android:layout_centerHorizontal="true"
       android:background="@drawable/add_photo"/>
    <EditText
        android:id="@+id/dialog_update_et"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_gray2"
        android:layout_centerHorizontal="true"
        android:paddingStart="10dp"
        android:hint="@string/name_of_type"
        android:layout_below="@id/dialo_update_img"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/dialog_update_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_grident"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="ok"
        android:textSize="30sp"
        android:layout_marginBottom="20dp"
        />


</RelativeLayout>