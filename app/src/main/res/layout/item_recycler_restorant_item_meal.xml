<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_recycler_restorant_food_type"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:dragEdge="right"
    app:mode="normal">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/btn_del"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_delete_sofra" />

        <ImageView
            android:id="@+id/btn_edt"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"

            android:background="@drawable/ic_edit_green" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_margin="20dp"
        android:background="@color/gray2">

        <ImageView
            android:id="@+id/item_recycler_meal_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/item_recycler_meal_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="titel"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/item_recycler_meal_img"
            android:paddingStart="10dp"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/item_recycler_meal_description"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:text="description"
            android:layout_toEndOf="@id/item_recycler_meal_img"
            android:paddingStart="10dp"
            android:textColor="@color/gray"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/item_recycler_meal_price"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
           android:layout_marginEnd="20dp"
            android:paddingStart="10dp"
            android:textSize="22sp"
            android:text="price"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>