<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_user_shops_item_order_confirm_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/container"
        tools:listitem="@layout/item_recycler_shops_item_orders_confirm"/>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:text="total price"
            android:textColor="@color/sofra_color"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/fragment_user_shops_item_order_confirm_txt_all"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:background="@drawable/circle"
            android:textSize="30dp"
          android:gravity="center"/>

        <Button
            android:id="@+id/fragment_user_shops_item_order_confirm_btn_conf"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/sofra_color"
            android:text="@string/confirm"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/fragment_user_shops_item_order_confirm_btn_add"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="130dp"
            android:layout_toEndOf="@+id/fragment_user_shops_item_order_confirm_btn_conf"
            android:background="@drawable/circle"
            android:backgroundTint="@color/sofra_color"
            android:text="@string/delete"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>